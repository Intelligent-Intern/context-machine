{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/module.schema.json",
  "title": "ModuleManifest",
  "description": "Schema for module manifests that orchestrate widgets and define navigation",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "dependsOn": {
      "type": "array",
      "items": { "type": "string" }
    },
    "navigation": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": { "type": "string" },
          "label": { "type": "string" },
          "icon": { "type": "string" },
          "permissions": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "required": ["path", "label"]
      }
    },
    "pages": {
      "type": "array",
      "items": {
        "$ref": "page.schema.json"
      }
    },
    "permissions": {
      "type": "array",
      "items": { "type": "string" }
    },
    "features": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["name", "version"],
  "additionalProperties": false
}