{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/widget-pack.schema.json",
  "title": "WidgetPackManifest",
  "description": "Schema for widget pack manifests defining reusable widgets and theme hooks",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "widgets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": { "type": "string" },
          "component": { "type": "string" },
          "themeWidget": { "type": "string" },
          "props": {
            "type": "object",
            "additionalProperties": { "type": ["string", "number", "boolean", "object", "array"] }
          },
          "events": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "scope": { "type": "string", "enum": ["ui", "backend"] },
                "permission": { "type": "string" }
              },
              "required": ["name", "scope"]
            }
          },
          "classes": {
            "type": "object",
            "additionalProperties": { "type": "string" }
          }
        },
        "required": ["key", "component"]
      }
    },
    "tokens": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "required": ["name", "version", "widgets"],
  "additionalProperties": false
}