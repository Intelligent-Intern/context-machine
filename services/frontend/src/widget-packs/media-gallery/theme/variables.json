{
  "version": "1.0.0",
  "name": "Media Gallery Widget Theme",
  "description": "Theme variables for image galleries, media viewers, and content showcases",
  "author": "Context Machine Team",
  "license": "MIT",
  "categories": {
    "colors": {
      "name": "Colors",
      "description": "Media gallery colors and overlays",
      "icon": "üé®",
      "order": 1,
      "variables": {
        "gallery-background": {
          "name": "gallery-background",
          "type": "color",
          "default": "#f8fafc",
          "description": "Main gallery background color",
          "category": "colors",
          "examples": ["#f8fafc", "#ffffff", "#f1f5f9"]
        },
        "gallery-item-bg": {
          "name": "gallery-item-bg",
          "type": "color",
          "default": "#ffffff",
          "description": "Individual media item background",
          "category": "colors",
          "examples": ["#ffffff", "#f9fafb", "#f8fafc"]
        },
        "gallery-overlay": {
          "name": "gallery-overlay",
          "type": "color",
          "default": "rgba(0, 0, 0, 0.6)",
          "description": "Overlay color for media items on hover",
          "category": "colors",
          "examples": [
            "rgba(0, 0, 0, 0.6)",
            "rgba(0, 0, 0, 0.4)",
            "rgba(59, 130, 246, 0.8)"
          ]
        },
        "gallery-overlay-text": {
          "name": "gallery-overlay-text",
          "type": "color",
          "default": "#ffffff",
          "description": "Text color on overlay",
          "category": "colors",
          "examples": ["#ffffff", "#f9fafb", "#f3f4f6"]
        },
        "gallery-border": {
          "name": "gallery-border",
          "type": "color",
          "default": "#e2e8f0",
          "description": "Border color for media items",
          "category": "colors",
          "examples": ["#e2e8f0", "#cbd5e1", "#94a3b8"]
        },
        "gallery-selected": {
          "name": "gallery-selected",
          "type": "color",
          "default": "#3b82f6",
          "description": "Border color for selected items",
          "category": "colors",
          "examples": ["#3b82f6", "#2563eb", "#1d4ed8"]
        },
        "gallery-loading": {
          "name": "gallery-loading",
          "type": "color",
          "default": "#f1f5f9",
          "description": "Background color for loading placeholders",
          "category": "colors",
          "examples": ["#f1f5f9", "#e2e8f0", "#cbd5e1"]
        },
        "gallery-caption-bg": {
          "name": "gallery-caption-bg",
          "type": "color",
          "default": "rgba(255, 255, 255, 0.95)",
          "description": "Background color for captions",
          "category": "colors",
          "examples": [
            "rgba(255, 255, 255, 0.95)",
            "rgba(248, 250, 252, 0.9)",
            "rgba(0, 0, 0, 0.8)"
          ]
        },
        "gallery-caption-text": {
          "name": "gallery-caption-text",
          "type": "color",
          "default": "#374151",
          "description": "Text color for captions",
          "category": "colors",
          "examples": ["#374151", "#1f2937", "#111827"]
        }
      }
    },
    "spacing": {
      "name": "Spacing",
      "description": "Gallery layout, grid spacing, and item sizing",
      "icon": "üìè",
      "order": 2,
      "variables": {
        "gallery-gap": {
          "name": "gallery-gap",
          "type": "spacing",
          "default": "16px",
          "description": "Gap between gallery items",
          "category": "spacing",
          "min": 4,
          "max": 32,
          "unit": "px",
          "examples": ["16px", "1rem", "20px"]
        },
        "gallery-padding": {
          "name": "gallery-padding",
          "type": "spacing",
          "default": "20px",
          "description": "Padding around gallery container",
          "category": "spacing",
          "examples": ["20px", "1.25rem", "24px"]
        },
        "gallery-item-padding": {
          "name": "gallery-item-padding",
          "type": "spacing",
          "default": "8px",
          "description": "Padding inside gallery items",
          "category": "spacing",
          "examples": ["8px", "0.5rem", "12px"]
        },
        "gallery-item-min-width": {
          "name": "gallery-item-min-width",
          "type": "size",
          "default": "200px",
          "description": "Minimum width of gallery items",
          "category": "spacing",
          "min": 120,
          "max": 400,
          "unit": "px",
          "examples": ["200px", "12.5rem", "250px"]
        },
        "gallery-item-aspect": {
          "name": "gallery-item-aspect",
          "type": "size",
          "default": "1",
          "description": "Aspect ratio for gallery items (width/height)",
          "category": "spacing",
          "examples": ["1", "1.5", "0.75", "16/9"]
        },
        "gallery-thumbnail-size": {
          "name": "gallery-thumbnail-size",
          "type": "size",
          "default": "80px",
          "description": "Size of thumbnail images",
          "category": "spacing",
          "min": 40,
          "max": 120,
          "unit": "px",
          "examples": ["80px", "5rem", "100px"]
        }
      }
    },
    "borders": {
      "name": "Borders",
      "description": "Gallery item borders and shapes",
      "icon": "‚¨ú",
      "order": 3,
      "variables": {
        "gallery-border-width": {
          "name": "gallery-border-width",
          "type": "border",
          "default": "1px",
          "description": "Border width for gallery items",
          "category": "borders",
          "examples": ["1px", "2px", "0px"]
        },
        "gallery-border-radius": {
          "name": "gallery-border-radius",
          "type": "border",
          "default": "8px",
          "description": "Border radius for gallery items",
          "category": "borders",
          "examples": ["8px", "6px", "12px", "0px"]
        },
        "gallery-selected-width": {
          "name": "gallery-selected-width",
          "type": "border",
          "default": "3px",
          "description": "Border width for selected items",
          "category": "borders",
          "examples": ["3px", "2px", "4px"]
        },
        "gallery-focus-ring": {
          "name": "gallery-focus-ring",
          "type": "shadow",
          "default": "0 0 0 2px rgba(59, 130, 246, 0.3)",
          "description": "Focus ring for gallery items",
          "category": "borders",
          "examples": [
            "0 0 0 2px rgba(59, 130, 246, 0.3)",
            "0 0 0 3px rgba(59, 130, 246, 0.2)"
          ]
        }
      }
    },
    "shadows": {
      "name": "Shadows",
      "description": "Gallery shadows and elevation effects",
      "icon": "üå´Ô∏è",
      "order": 4,
      "variables": {
        "gallery-item-shadow": {
          "name": "gallery-item-shadow",
          "type": "shadow",
          "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
          "description": "Shadow for gallery items",
          "category": "shadows",
          "examples": [
            "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
            "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
            "none"
          ]
        },
        "gallery-item-shadow-hover": {
          "name": "gallery-item-shadow-hover",
          "type": "shadow",
          "default": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
          "description": "Shadow for gallery items on hover",
          "category": "shadows",
          "examples": [
            "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
            "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
            "0 8px 16px 0 rgba(0, 0, 0, 0.15)"
          ]
        },
        "gallery-modal-shadow": {
          "name": "gallery-modal-shadow",
          "type": "shadow",
          "default": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
          "description": "Shadow for modal/lightbox view",
          "category": "shadows",
          "examples": [
            "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
            "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
          ]
        }
      }
    },
    "transitions": {
      "name": "Transitions",
      "description": "Gallery animations and transitions",
      "icon": "‚ö°",
      "order": 5,
      "variables": {
        "gallery-transition": {
          "name": "gallery-transition",
          "type": "transition",
          "default": "all 250ms ease-out",
          "description": "Transition for gallery item interactions",
          "category": "transitions",
          "examples": [
            "all 250ms ease-out",
            "transform 200ms ease",
            "opacity 150ms ease-in-out"
          ]
        },
        "gallery-hover-scale": {
          "name": "gallery-hover-scale",
          "type": "size",
          "default": "1.05",
          "description": "Scale factor for items on hover",
          "category": "transitions",
          "min": 1,
          "max": 1.2,
          "step": 0.01,
          "examples": ["1.05", "1.02", "1.1"]
        },
        "gallery-loading-duration": {
          "name": "gallery-loading-duration",
          "type": "transition",
          "default": "1.5s",
          "description": "Duration for loading animations",
          "category": "transitions",
          "examples": ["1.5s", "1s", "2s"]
        }
      }
    },
    "typography": {
      "name": "Typography",
      "description": "Font styles for gallery captions and metadata",
      "icon": "üìù",
      "order": 6,
      "variables": {
        "gallery-caption-size": {
          "name": "gallery-caption-size",
          "type": "size",
          "default": "14px",
          "description": "Font size for image captions",
          "category": "typography",
          "min": 12,
          "max": 18,
          "unit": "px",
          "examples": ["14px", "0.875rem", "16px"]
        },
        "gallery-title-size": {
          "name": "gallery-title-size",
          "type": "size",
          "default": "16px",
          "description": "Font size for gallery titles",
          "category": "typography",
          "min": 14,
          "max": 24,
          "unit": "px",
          "examples": ["16px", "1rem", "18px"]
        },
        "gallery-meta-size": {
          "name": "gallery-meta-size",
          "type": "size",
          "default": "12px",
          "description": "Font size for metadata (date, size, etc.)",
          "category": "typography",
          "min": 10,
          "max": 16,
          "unit": "px",
          "examples": ["12px", "0.75rem", "14px"]
        }
      }
    }
  },
  "variants": {
    "dark": {
      "name": "Dark Gallery",
      "description": "Dark theme variant for media galleries",
      "overrides": {
        "gallery-background": "#1f2937",
        "gallery-item-bg": "#374151",
        "gallery-border": "#4b5563",
        "gallery-loading": "#4b5563",
        "gallery-caption-bg": "rgba(31, 41, 55, 0.95)",
        "gallery-caption-text": "#f3f4f6"
      }
    },
    "minimal": {
      "name": "Minimal Gallery",
      "description": "Clean gallery without borders or shadows",
      "overrides": {
        "gallery-border-width": "0px",
        "gallery-item-shadow": "none",
        "gallery-item-shadow-hover": "none",
        "gallery-item-bg": "transparent",
        "gallery-padding": "0px"
      }
    },
    "compact": {
      "name": "Compact Gallery",
      "description": "Space-efficient gallery layout",
      "overrides": {
        "gallery-gap": "8px",
        "gallery-padding": "12px",
        "gallery-item-padding": "4px",
        "gallery-item-min-width": "150px",
        "gallery-thumbnail-size": "60px",
        "gallery-border-radius": "4px"
      }
    },
    "masonry": {
      "name": "Masonry Gallery",
      "description": "Pinterest-style masonry layout",
      "overrides": {
        "gallery-item-aspect": "auto",
        "gallery-gap": "12px",
        "gallery-item-min-width": "250px",
        "gallery-border-radius": "12px"
      }
    }
  }
}