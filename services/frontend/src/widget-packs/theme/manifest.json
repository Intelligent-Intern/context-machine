{
  "id": "theme",
  "name": "Theme System",
  "version": "1.0.0",
  "description": "Advanced theme editor and customization system for Context Machine",
  "author": "Context Machine Team",
  "license": "MIT",
  "keywords": ["theme", "editor", "customization", "design", "colors", "typography"],
  "widgets": {
    "ThemeEditor": {
      "name": "Theme Editor",
      "description": "Advanced theme editor with real-time preview and widget-specific customization",
      "category": "design",
      "tags": ["theme", "editor", "customization"],
      "permissions": ["theme.edit", "theme.create", "theme.delete"],
      "props": {
        "initialTab": {
          "type": "string",
          "default": "global",
          "description": "Initial tab to show when editor opens",
          "options": ["global", "widgets", "preview"]
        },
        "previewMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable live preview mode by default"
        },
        "showSidebar": {
          "type": "boolean",
          "default": true,
          "description": "Show the widget pack sidebar"
        },
        "showProperties": {
          "type": "boolean",
          "default": true,
          "description": "Show the properties panel"
        }
      },
      "events": {
        "themeChanged": {
          "description": "Emitted when theme is modified",
          "payload": {
            "themeId": "string",
            "changes": "object"
          }
        },
        "themeSaved": {
          "description": "Emitted when theme is saved",
          "payload": {
            "themeId": "string",
            "themeName": "string"
          }
        },
        "themeLoaded": {
          "description": "Emitted when theme is loaded",
          "payload": {
            "themeId": "string",
            "themeName": "string"
          }
        }
      },
      "dependencies": {
        "stores": ["theme"],
        "services": ["themeRegistry", "cssManager"]
      }
    }
  },
  "dependencies": {
    "vue": "^3.3.0",
    "pinia": "^2.1.0"
  },
  "peerDependencies": {
    "@/core/stores/theme": "*",
    "@/core/theme/registry": "*"
  }
}