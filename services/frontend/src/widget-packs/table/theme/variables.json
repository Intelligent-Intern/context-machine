{
  "version": "1.0.0",
  "name": "Table Widget Theme",
  "description": "Theme variables for data tables, grids, and tabular components",
  "author": "Context Machine Team",
  "license": "MIT",
  "categories": {
    "colors": {
      "name": "Colors",
      "description": "Table colors, row states, and data visualization",
      "icon": "üé®",
      "order": 1,
      "variables": {
        "table-background": {
          "name": "table-background",
          "type": "color",
          "default": "#ffffff",
          "description": "Main table background color",
          "category": "colors",
          "examples": ["#ffffff", "#f8fafc", "#f1f5f9"]
        },
        "table-header-bg": {
          "name": "table-header-bg",
          "type": "color",
          "default": "#f8fafc",
          "description": "Table header background color",
          "category": "colors",
          "examples": ["#f8fafc", "#f1f5f9", "#e2e8f0"]
        },
        "table-row-even": {
          "name": "table-row-even",
          "type": "color",
          "default": "#ffffff",
          "description": "Even row background color (zebra striping)",
          "category": "colors",
          "examples": ["#ffffff", "#f9fafb", "transparent"]
        },
        "table-row-odd": {
          "name": "table-row-odd",
          "type": "color",
          "default": "#f9fafb",
          "description": "Odd row background color (zebra striping)",
          "category": "colors",
          "examples": ["#f9fafb", "#f8fafc", "#f1f5f9"]
        },
        "table-row-hover": {
          "name": "table-row-hover",
          "type": "color",
          "default": "#f1f5f9",
          "description": "Row background color on hover",
          "category": "colors",
          "examples": ["#f1f5f9", "#e2e8f0", "#ddd6fe"]
        },
        "table-row-selected": {
          "name": "table-row-selected",
          "type": "color",
          "default": "#dbeafe",
          "description": "Selected row background color",
          "category": "colors",
          "examples": ["#dbeafe", "#e0e7ff", "#fef3c7"]
        },
        "table-border": {
          "name": "table-border",
          "type": "color",
          "default": "#e2e8f0",
          "description": "Table border and cell divider color",
          "category": "colors",
          "examples": ["#e2e8f0", "#cbd5e1", "#94a3b8"]
        },
        "table-text": {
          "name": "table-text",
          "type": "color",
          "default": "#1f2937",
          "description": "Primary text color in table cells",
          "category": "colors",
          "examples": ["#1f2937", "#374151", "#111827"]
        },
        "table-text-secondary": {
          "name": "table-text-secondary",
          "type": "color",
          "default": "#6b7280",
          "description": "Secondary text color for metadata",
          "category": "colors",
          "examples": ["#6b7280", "#9ca3af", "#d1d5db"]
        },
        "table-header-text": {
          "name": "table-header-text",
          "type": "color",
          "default": "#374151",
          "description": "Header text color",
          "category": "colors",
          "examples": ["#374151", "#1f2937", "#111827"]
        }
      }
    },
    "spacing": {
      "name": "Spacing",
      "description": "Table layout, cell padding, and spacing",
      "icon": "üìè",
      "order": 2,
      "variables": {
        "table-cell-padding": {
          "name": "table-cell-padding",
          "type": "spacing",
          "default": "12px 16px",
          "description": "Padding inside table cells",
          "category": "spacing",
          "examples": ["12px 16px", "8px 12px", "16px 20px"]
        },
        "table-header-padding": {
          "name": "table-header-padding",
          "type": "spacing",
          "default": "16px",
          "description": "Padding inside header cells",
          "category": "spacing",
          "examples": ["16px", "12px 16px", "20px"]
        },
        "table-row-height": {
          "name": "table-row-height",
          "type": "size",
          "default": "48px",
          "description": "Minimum height of table rows",
          "category": "spacing",
          "min": 32,
          "max": 80,
          "unit": "px",
          "examples": ["48px", "3rem", "56px"]
        },
        "table-header-height": {
          "name": "table-header-height",
          "type": "size",
          "default": "56px",
          "description": "Height of table header",
          "category": "spacing",
          "min": 40,
          "max": 80,
          "unit": "px",
          "examples": ["56px", "3.5rem", "64px"]
        },
        "table-gap": {
          "name": "table-gap",
          "type": "spacing",
          "default": "0px",
          "description": "Gap between table cells (for separated borders)",
          "category": "spacing",
          "examples": ["0px", "1px", "2px"]
        }
      }
    },
    "borders": {
      "name": "Borders",
      "description": "Table borders, dividers, and outlines",
      "icon": "‚¨ú",
      "order": 3,
      "variables": {
        "table-border-width": {
          "name": "table-border-width",
          "type": "border",
          "default": "1px",
          "description": "Width of table borders",
          "category": "borders",
          "examples": ["1px", "2px", "0px"]
        },
        "table-border-radius": {
          "name": "table-border-radius",
          "type": "border",
          "default": "8px",
          "description": "Border radius for table container",
          "category": "borders",
          "examples": ["8px", "6px", "12px", "0px"]
        },
        "table-cell-border": {
          "name": "table-cell-border",
          "type": "border",
          "default": "1px solid var(--table-border)",
          "description": "Border style for table cells",
          "category": "borders",
          "examples": [
            "1px solid var(--table-border)",
            "none",
            "1px dashed var(--table-border)"
          ]
        }
      }
    },
    "typography": {
      "name": "Typography",
      "description": "Font styles for table content",
      "icon": "üìù",
      "order": 4,
      "variables": {
        "table-font-size": {
          "name": "table-font-size",
          "type": "size",
          "default": "14px",
          "description": "Base font size for table cells",
          "category": "typography",
          "min": 12,
          "max": 18,
          "unit": "px",
          "examples": ["14px", "0.875rem", "16px"]
        },
        "table-header-font-size": {
          "name": "table-header-font-size",
          "type": "size",
          "default": "14px",
          "description": "Font size for table headers",
          "category": "typography",
          "min": 12,
          "max": 18,
          "unit": "px",
          "examples": ["14px", "0.875rem", "16px"]
        },
        "table-header-font-weight": {
          "name": "table-header-font-weight",
          "type": "font",
          "default": "600",
          "description": "Font weight for table headers",
          "category": "typography",
          "options": ["400", "500", "600", "700"],
          "examples": ["600", "500", "700"]
        },
        "table-font-weight": {
          "name": "table-font-weight",
          "type": "font",
          "default": "400",
          "description": "Font weight for table cells",
          "category": "typography",
          "options": ["300", "400", "500"],
          "examples": ["400", "300", "500"]
        }
      }
    },
    "shadows": {
      "name": "Shadows",
      "description": "Table shadows and elevation",
      "icon": "üå´Ô∏è",
      "order": 5,
      "variables": {
        "table-shadow": {
          "name": "table-shadow",
          "type": "shadow",
          "default": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
          "description": "Shadow for table container",
          "category": "shadows",
          "examples": [
            "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
            "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
            "none"
          ]
        },
        "table-header-shadow": {
          "name": "table-header-shadow",
          "type": "shadow",
          "default": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
          "description": "Shadow for sticky table headers",
          "category": "shadows",
          "examples": [
            "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
            "0 2px 4px 0 rgba(0, 0, 0, 0.1)",
            "none"
          ]
        }
      }
    }
  },
  "variants": {
    "dark": {
      "name": "Dark Table",
      "description": "Dark theme variant for tables",
      "overrides": {
        "table-background": "#1f2937",
        "table-header-bg": "#374151",
        "table-row-even": "#1f2937",
        "table-row-odd": "#374151",
        "table-row-hover": "#4b5563",
        "table-row-selected": "#1e3a8a",
        "table-border": "#4b5563",
        "table-text": "#f9fafb",
        "table-text-secondary": "#d1d5db",
        "table-header-text": "#f3f4f6"
      }
    },
    "minimal": {
      "name": "Minimal Table",
      "description": "Clean minimal table with reduced visual elements",
      "overrides": {
        "table-border-width": "0px",
        "table-shadow": "none",
        "table-header-shadow": "none",
        "table-border-radius": "0px",
        "table-header-bg": "transparent",
        "table-row-odd": "transparent"
      }
    },
    "compact": {
      "name": "Compact Table",
      "description": "Space-efficient table with reduced padding",
      "overrides": {
        "table-cell-padding": "8px 12px",
        "table-header-padding": "12px",
        "table-row-height": "40px",
        "table-header-height": "44px",
        "table-font-size": "13px",
        "table-header-font-size": "13px"
      }
    },
    "spacious": {
      "name": "Spacious Table",
      "description": "Comfortable table with generous spacing",
      "overrides": {
        "table-cell-padding": "16px 20px",
        "table-header-padding": "20px",
        "table-row-height": "60px",
        "table-header-height": "68px",
        "table-font-size": "16px",
        "table-header-font-size": "16px"
      }
    }
  }
}