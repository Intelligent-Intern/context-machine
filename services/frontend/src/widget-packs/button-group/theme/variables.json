        "btn-group-active": "#6b7280",
        "btn-group-selected": "#1e3a8a",
        "btn-group-border": "#4b5563",
        "btn-group-text": "#f3f4f6",
        "btn-group-disabled": "#1f2937",
        "btn-group-disabled-text": "#6b7280"
      }
