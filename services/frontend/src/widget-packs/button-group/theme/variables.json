      "variables": {
        "btn-group-border-width": {
          "name": "btn-group-border-width",
          "type": "border",
          "default": "1px",
          "description": "Border width for buttons",
          "category": "borders",
          "examples": ["1px", "2px", "0px"]
        },
        "btn-group-border-radius": {
          "name": "btn-group-border-radius",
          "type": "border",
          "default": "6px",
          "description": "Border radius for button group",
          "category": "borders",
          "examples": ["6px", "4px", "8px", "0px"]
        },
        "btn-group-inner-radius": {
          "name": "btn-group-inner-radius",
          "type": "border",
          "default": "0px",
          "description": "Border radius for inner buttons (usually 0)",
          "category": "borders",
          "examples": ["0px", "2px", "4px"]
        },
        "btn-group-focus-ring": {
          "name": "btn-group-focus-ring",
          "type": "shadow",
          "default": "0 0 0 2px rgba(59, 130, 246, 0.3)",
          "description": "Focus ring for buttons",
          "category": "borders",
          "examples": [
            "0 0 0 2px rgba(59, 130, 246, 0.3)",
            "0 0 0 3px rgba(59, 130, 246, 0.2)"
          ]
        }
      }
    },
