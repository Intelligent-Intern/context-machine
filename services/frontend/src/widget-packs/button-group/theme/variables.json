{
  "version": "1.0.0",
  "name": "Button Group Widget Theme",
  "description": "Theme variables for button groups, toolbars, and action sets",
  "author": "Context Machine Team",
  "license": "MIT",
  "categories": {
    "colors": {
      "name": "Colors",
      "description": "Button group colors and states",
      "icon": "üé®",
      "order": 1,
      "variables": {
        "btn-group-primary": {
          "name": "btn-group-primary",
          "type": "color",
          "default": "#3b82f6",
          "description": "Primary button color in groups",
          "category": "colors",
          "examples": ["#3b82f6", "#2563eb", "#1d4ed8"]
        },
        "btn-group-secondary": {
          "name": "btn-group-secondary",
          "type": "color",
          "default": "#6b7280",
          "description": "Secondary button color",
          "category": "colors",
          "examples": ["#6b7280", "#9ca3af", "#d1d5db"]
