        "btn-group-background": {
          "name": "btn-group-background",
          "type": "color",
          "default": "#ffffff",
          "description": "Default button background",
          "category": "colors",
          "examples": ["#ffffff", "#f8fafc", "#f1f5f9"]
        },
        "btn-group-hover": {
          "name": "btn-group-hover",
          "type": "color",
          "default": "#f1f5f9",
          "description": "Button hover background",
          "category": "colors",
          "examples": ["#f1f5f9", "#e2e8f0", "#ddd6fe"]
        },
        "btn-group-active": {
          "name": "btn-group-active",
          "type": "color",
          "default": "#e2e8f0",
