          "category": "colors",
          "examples": ["#dbeafe", "#e0e7ff", "#fef3c7"]
        },
        "btn-group-border": {
          "name": "btn-group-border",
          "type": "color",
          "default": "#e2e8f0",
          "description": "Button border color",
          "category": "colors",
          "examples": ["#e2e8f0", "#cbd5e1", "#94a3b8"]
        },
        "btn-group-text": {
          "name": "btn-group-text",
          "type": "color",
          "default": "#374151",
          "description": "Button text color",
          "category": "colors",
          "examples": ["#374151", "#1f2937", "#111827"]
        },
        "btn-group-text-primary": {
          "name": "btn-group-text-primary",
          "type": "color",
          "default": "#ffffff",
          "description": "Primary button text color",
          "category": "colors",
          "examples": ["#ffffff", "#f9fafb", "#f3f4f6"]
