      "name": "Typography",
      "description": "Font styles for button groups",
      "icon": "üìù",
      "order": 4,
      "variables": {
        "btn-group-font-size": {
          "name": "btn-group-font-size",
          "type": "size",
          "default": "14px",
          "description": "Font size for button text",
          "category": "typography",
          "min": 12,
          "max": 18,
          "unit": "px",
          "examples": ["14px", "0.875rem", "16px"]
        },
        "btn-group-font-weight": {
          "name": "btn-group-font-weight",
          "type": "font",
          "default": "500",
          "description": "Font weight for button text",
          "category": "typography",
          "options": ["400", "500", "600"],
          "examples": ["500", "400", "600"]
        },
        "btn-group-line-height": {
          "name": "btn-group-line-height",
          "type": "size",
          "default": "1.4",
          "description": "Line height for button text",
          "category": "typography",
          "min": 1,
          "max": 2,
          "step": 0.1,
          "examples": ["1.4", "1.5", "1.2"]
        }
      }
    },
    "shadows": {
      "name": "Shadows",
      "description": "Button group shadows and elevation",
      "icon": "üå´Ô∏è",
      "order": 5,
      "variables": {
        "btn-group-shadow": {
          "name": "btn-group-shadow",
          "type": "shadow",
          "default": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
          "description": "Default button shadow",
          "category": "shadows",
          "examples": [
            "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
            "0 2px 4px 0 rgba(0, 0, 0, 0.1)",
            "none"
          ]
        },
        "btn-group-shadow-hover": {
          "name": "btn-group-shadow-hover",
          "type": "shadow",
          "default": "0 2px 4px 0 rgba(0, 0, 0, 0.1)",
          "description": "Button shadow on hover",
          "category": "shadows",
          "examples": [
            "0 2px 4px 0 rgba(0, 0, 0, 0.1)",
            "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
            "none"
          ]
        },
        "btn-group-shadow-active": {
          "name": "btn-group-shadow-active",
          "type": "shadow",
          "default": "inset 0 1px 2px 0 rgba(0, 0, 0, 0.1)",
          "description": "Button shadow when pressed",
          "category": "shadows",
          "examples": [
            "inset 0 1px 2px 0 rgba(0, 0, 0, 0.1)",
            "inset 0 2px 4px 0 rgba(0, 0, 0, 0.1)",
            "none"
          ]
        }
      }
    },
    "transitions": {
      "name": "Transitions",
      "description": "Button group animations and transitions",
      "icon": "‚ö°",
      "order": 6,
      "variables": {
        "btn-group-transition": {
          "name": "btn-group-transition",
          "type": "transition",
          "default": "all 150ms ease-out",
          "description": "Transition for button state changes",
          "category": "transitions",
          "examples": [
            "all 150ms ease-out",
            "background-color 200ms ease",
            "transform 100ms ease-out"
          ]
        }
      }
    }
