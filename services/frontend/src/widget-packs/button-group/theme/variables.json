          "name": "btn-group-disabled",
          "type": "color",
          "default": "#f3f4f6",
          "description": "Disabled button background",
          "category": "colors",
          "examples": ["#f3f4f6", "#e5e7eb", "#d1d5db"]
        },
        "btn-group-disabled-text": {
          "name": "btn-group-disabled-text",
          "type": "color",
          "default": "#9ca3af",
          "description": "Disabled button text color",
          "category": "colors",
          "examples": ["#9ca3af", "#d1d5db", "#6b7280"]
        }
      }
    },
    "spacing": {
      "name": "Spacing",
      "description": "Button group layout and spacing",
      "icon": "üìè",
      "order": 2,
      "variables": {
        "btn-group-padding": {
          "name": "btn-group-padding",
          "type": "spacing",
          "default": "8px 16px",
          "description": "Padding inside buttons",
          "category": "spacing",
          "examples": ["8px 16px", "6px 12px", "12px 20px"]
        },
        "btn-group-height": {
          "name": "btn-group-height",
          "type": "size",
          "default": "36px",
          "description": "Height of buttons in group",
          "category": "spacing",
          "min": 28,
          "max": 56,
          "unit": "px",
          "examples": ["36px", "2.25rem", "40px"]
        },
        "btn-group-gap": {
          "name": "btn-group-gap",
          "type": "spacing",
          "default": "0px",
          "description": "Gap between buttons (0 for connected)",
          "category": "spacing",
          "examples": ["0px", "4px", "8px"]
        },
        "btn-group-icon-size": {
          "name": "btn-group-icon-size",
          "type": "size",
          "default": "16px",
          "description": "Size of icons in buttons",
          "category": "spacing",
          "min": 12,
          "max": 24,
          "unit": "px",
          "examples": ["16px", "1rem", "20px"]
        },
        "btn-group-icon-gap": {
          "name": "btn-group-icon-gap",
          "type": "spacing",
          "default": "8px",
          "description": "Gap between icon and text",
          "category": "spacing",
          "examples": ["8px", "0.5rem", "6px"]
        }
      }
    },
